@model IEnumerable<KrontecDemo.Models.Customer>

<h1>Customer List</h1>
<a href="/Customer/Create" class = "btn btn-primary mb-3">Create New Customer</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Address</td>
                <td>
                    <a href="/Customer/Edit/@customer.CustomerId" class="btn btn-primary">Edit</a>
                    <a href="/Customer/Delete/@customer.CustomerId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

